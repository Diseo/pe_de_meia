<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/double_space"
        android:layout_marginTop="@dimen/single_space"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="@dimen/single_space"
        android:layout_marginLeft="@dimen/single_space"
        android:layout_marginEnd="@dimen/single_space"
        android:layout_marginRight="@dimen/single_space"
        android:elevation="4dp"
        android:clickable="true"
        android:background="@drawable/card_light_blue">

        <com.akamatsu.diseo.pedemeia.Font.DisplayTextView
            android:id="@+id/goalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="_goal"
            android:textSize="28sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/moneyBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sticker_light_purple_bg" />

            <ImageView
                android:id="@+id/moneyIcon"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_white_bg"
                android:paddingStart="5dp"
                android:paddingEnd="16dp"
                android:src="@drawable/ic_money"/>

            <View
                android:id="@+id/moneyBar"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:background="@drawable/bar_purple_bg" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height">

            <View
                android:id="@+id/timeBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sticker_light_violet_bg" />

            <ImageView
                android:id="@+id/timeIcon"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/card_white_bg"
                android:paddingStart="7dp"
                android:paddingEnd="19dp"
                android:src="@drawable/ic_time"/>

            <View
                android:id="@+id/timeBar"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:background="@drawable/bar_violet_bg" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>