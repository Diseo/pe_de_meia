<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balanceCard"
    android:layout_width="match_parent"  android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:elevation="2dp"
        android:background="@drawable/card_light_yellow">

        <com.akamatsu.diseo.pedemeia.Font.DisplayTextView
            android:id="@+id/balanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:text="balanÃ§o"
            android:textSize="28sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_height">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/sticker_light_salmon_bg" />

            <View
                android:id="@+id/balance_bar"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/bar_salmon_bg" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>